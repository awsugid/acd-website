---
import "../styles/main.css";
import { SEO } from "astro-seo";

import Header from "../components/Header.tsx";
import Footer from "../components/Footer.tsx";
import favicon from "../images/favicon-32x32.png";
import appleTouchIcon from "../images/apple-touch-icon.png";
import faviconIco from "../images/favicon.ico";
const { isOpenCfp = false } = Astro.props;
---

<html lang="en" class="scroll-smooth">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>AWS Community Day Indonesia 2025</title>
        <meta
            name="description"
            content="Join the largest AWS community gathering in Indonesia. Learn, network, and grow with fellow cloud enthusiasts."
        />
        <meta
            name="keywords"
            content="AWS, Amazon Web Services, Cloud Computing, Indonesia, Community, Tech Conference"
        />

        <!-- Favicons -->
        <link href={favicon.src} rel="icon" />
        <link href={appleTouchIcon.src} rel="apple-touch-icon" />

        <!-- Fonts -->
        <link href="https://fonts.googleapis.com" rel="preconnect" />
        <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap"
            rel="stylesheet"
        />
        <SEO
        title="AWS Community Day Indonesia 2025"
        description="Join the largest AWS community gathering in Indonesia. Learn, network, and grow with fellow cloud enthusiasts."
        openGraph={{
          basic: {
            title: "AWS Community Day Indonesia 2025",
            type: "Join the largest AWS community gathering in Indonesia. Learn, network, and grow with fellow cloud enthusiasts.",
            image: "https://gudang.awscommunity.id/og.png",
          }
        }}
        extend={{
          // extending the default link tags
          link: [{ rel: "icon", href: faviconIco.src }],
          // extending the default meta tags
          meta: [
            {
              name: "twitter:image",
              content: "https://gudang.awscommunity.id/og.png",
            },
            { name: "twitter:title", content: "AWS Community Day Indonesia 2025" },
            { name: "twitter:description", content: "Join the largest AWS community gathering in Indonesia. Learn, network, and grow with fellow cloud enthusiasts." },
          ],
        }}

        />
    </head>
    <body
        class="bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900 text-white antialiased"
    >
        <Header client:load isOpenCfp={isOpenCfp} />
        <slot />
        <Footer />

        <!-- Scroll Top Button -->
        <button
            id="scroll-top"
            class="fixed bottom-8 right-8 bg-gradient-to-r from-orange-500 to-pink-600 hover:from-orange-600 hover:to-pink-700 text-white p-3 rounded-full shadow-lg hover:shadow-xl transform hover:scale-110 transition-all duration-20 opacity-0 pointer-events-none z-50"
            aria-label="Scroll to top"
        >
            <svg
                class="w-6 h-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M7 11l5-5m0 0l5 5m-5-5v12"></path>
            </svg>
        </button>

        <script>
            // Scroll to top functionality
            const scrollTopBtn = document.getElementById("scroll-top");

            window.addEventListener("scroll", () => {
                if (window.scrollY > 300) {
                    scrollTopBtn.classList.remove(
                        "opacity-0",
                        "pointer-events-none",
                    );
                    scrollTopBtn.classList.add("opacity-100");
                } else {
                    scrollTopBtn.classList.add(
                        "opacity-0",
                        "pointer-events-none",
                    );
                    scrollTopBtn.classList.remove("opacity-100");
                }
            });

            scrollTopBtn.addEventListener("click", () => {
                window.scrollTo({ top: 0, behavior: "smooth" });
            });
        </script>
    </body>
</html>
