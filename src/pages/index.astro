---
import PortalLayout from "../layouts/PortalLayout.astro";
import IndonesiaMap from "../components/IndonesiaMap";

interface UserGroup {
    city: string;
    description: string;
    link: string;
    color: string;
    coordinates: [number, number];
}

const userGroups: UserGroup[] = [
    {
        city: "Jakarta",
        description: "Join the AWS Community in Jakarta",
        link: "https://jakarta.awscommunity.id",
        color: "from-orange-400 to-amber-400",
        coordinates: [106.8456, -6.2088],
    },
    {
        city: "Medan",
        description: "Join the AWS Community in Medan",
        link: "https://www.meetup.com/aws-user-group-medan/",
        color: "from-pink-500 to-rose-500",
        coordinates: [98.6722, 3.5952],
    },
    {
        city: "Surabaya",
        description: "Join the AWS Community in Surabaya",
        link: "https://www.meetup.com/aws-user-group-surabaya/",
        color: "from-emerald-400 to-teal-400",
        coordinates: [112.7521, -7.2575],
    },
    {
        city: "Bandung",
        description: "Join the AWS Community in Bandung",
        link: "https://www.meetup.com/aws-user-group-bandung/",
        color: "from-blue-400 to-cyan-400",
        coordinates: [107.6191, -6.9175],
    },
];
---

<PortalLayout title="AWS User Group Indonesia">
    <main class="min-h-screen bg-hero-gradient relative overflow-hidden">
        <!-- Background Elements -->
        <div class="absolute inset-0 bg-black/20"></div>
        <div
            class="absolute top-20 left-10 w-72 h-72 bg-gradient-to-r from-purple-400/20 to-pink-400/20 rounded-full blur-3xl animate-pulse-slow"
        >
        </div>
        <div
            class="absolute bottom-20 right-10 w-96 h-96 bg-gradient-to-r from-blue-400/15 to-cyan-400/15 rounded-full blur-3xl animate-pulse-slow"
        >
        </div>

        <section
            class="min-h-screen flex flex-col items-center justify-center relative px-4 sm:px-6 lg:px-8 py-12 md:py-20"
        >
            <div class="max-w-6xl mx-auto relative z-10 text-center w-full">
                <!-- Hero Header -->
                <div class="mb-12 space-y-6">
                    <h1
                        class="text-4xl md:text-6xl lg:text-7xl font-bold text-white tracking-tight"
                    >
                        AWS User Group <span
                            class="text-transparent bg-clip-text bg-gradient-to-r from-[#F5C063] to-[#FF9C5F]"
                            >Indonesia</span
                        >
                    </h1>
                    <p
                        class="text-xl text-gray-200 max-w-3xl mx-auto font-light leading-relaxed"
                    >
                        Connecting cloud enthusiasts, developers, and builders
                        across the archipelago.
                    </p>
                </div>

                <!-- Interactive Map Section -->
                <div
                    class="mb-16 relative w-full max-w-5xl mx-auto h-[400px] md:h-auto md:aspect-[2/1]"
                >
                    <IndonesiaMap client:only="react" userGroups={userGroups} />
                </div>

                <!-- User Groups Grid -->
                <div
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-16"
                >
                    {
                        userGroups.map((group) => (
                            <a
                                href={group.link}
                                class="group relative bg-white/5 backdrop-blur-lg border border-white/10 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl overflow-hidden text-left"
                            >
                                <div
                                    class={`absolute inset-0 opacity-0 group-hover:opacity-10 transition-opacity duration-500 bg-gradient-to-br ${group.color}`}
                                />
                                <div class="relative z-10">
                                    <h3 class="text-2xl font-bold text-white mb-2">
                                        {group.city}
                                    </h3>
                                    <p class="text-gray-400 group-hover:text-gray-200 transition-colors">
                                        {group.description}
                                    </p>
                                </div>
                            </a>
                        ))
                    }
                </div>
            </div>
        </section>
    </main>
</PortalLayout>
